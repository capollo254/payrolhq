# Environment Variables for PayrollHQ
SECRET_KEY=django-insecure-change-this-in-production-with-a-secure-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=payrollhq_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (optional for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@payrollhq.com

# Sentry (optional for production monitoring)
SENTRY_DSN=

# Media and Static Files
STATIC_ROOT=/var/www/payrollhq/static/
MEDIA_ROOT=/var/www/payrollhq/media/